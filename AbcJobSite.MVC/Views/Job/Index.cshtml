@model IEnumerable<AbcJobSite.Model.JobList>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <button type="button" class="btn btn-dark">@Html.ActionLink("Create New", "Create")</button> 
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table">
    <tr>
        <th>
            <a href="#" class="list-group-item list-group-item-action list-group-item-warning"> @Html.DisplayNameFor(model => model.JobTitle)</a>
           
        </th>
        <th>
            <a href="#" class="list-group-item list-group-item-action list-group-item-success">@Html.DisplayNameFor(model => model.JobDescription)</a>
            
        </th>
        <th>
            <a href="#" class="list-group-item list-group-item-action list-group-item-secondary">@Html.DisplayNameFor(model => model.Location)</a>
            
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <div class="card" style="width: 10rem;">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item-warning">@Html.DisplayFor(modelItem => item.JobTitle)</li>
                        
               
                    </ul>
                 
                </div>
                
            </td>
            <td>
                <div class="card" style="width: 18rem;">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item-success">@Html.DisplayFor(modelItem => item.JobDescription)</li>


                    </ul>

                </div>
                
            </td>
            <td>
                <div class="card" style="width: 10rem;">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item-secondary">@Html.DisplayFor(modelItem => item.Location)</li>


                    </ul>

                </div>
                
            </td>
            <td>
                <button type="button" class="btn btn-info">@Html.ActionLink("Edit", "Edit", new { id = item.Id }) </button>
                <button type="button" class="btn btn-warning">@Html.ActionLink("Details", "Details", new { id = item.Id }) </button>
                <button type="button" class="btn btn-danger">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</button>
                <button type="button" class="btn btn-success">@Html.ActionLink("Apply", "Create", "JobApplication"@*,  new { id = item.Id }, null*@)</button>

                
                
                
            </td>
        </tr>
    }

</table>
